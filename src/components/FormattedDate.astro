---
interface Props {
  date: Date;
  lang: string;
}

const { date, lang } = Astro.props;
const parsedDate = new Date(date);
---

<time datetime={parsedDate.toISOString()}>
  {
    parsedDate.toLocaleDateString(lang === "en" ? "en-us" : "pt-br", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
